meta {
  name: new deck
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/api/groups/{{groupID}}/decks
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "deckName": "test deck",
    "deckType": "PRIVATE",
    "deckDescription": "description"
  }
}

assert {
  res.body: matches ^D-[a-zA-Z0-9]{8}$
}

script:post-response {
  bru.setEnvVar("deckID", res.body)
}
